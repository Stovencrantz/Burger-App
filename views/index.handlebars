
  <!-- events-index -->
  <div class="jumbotron  bg-transparent text-center mh-100px">
     <img class = "pb-4" src="/assets/favicon/android-chrome-192x192.png" alt="burger image" class = "mw-200 mh-200 bg-orange">
    
    <h2>BURGERS! NOM!NOM! NOM!</h2>
  </div>

  <div class="row">
      <div class="col-sm-4 ">
        <h3 class="text-center">Fresh Burgers!</h2>
        <ul class="list-group freshBurgers">
          {{#each burgers}}
            {{#unless devoured}}
              <li class = "list-group-item text-center  freshBurg">{{this.id}}. {{this.burger_name}} 
              </li>               
            {{/unless}}
          {{/each}}
        </ul> 
      </div>

      <div class="col-sm-4 ">
        <ul class="list-group mt-4 pt-4"></ul>
          {{#each burgers}}
            {{#unless devoured}}
              <li class = "py-1"><button class = "btn btn-primary devourBtn " data-id="{{id}}">Devour Me!</button></li>             
            {{/unless}}
          {{/each}}
          </ul>
      </div>

      <div class="col-sm-4 text-right">
          <h3 class="text-center">Devoured Burgers!</h2>
          <ul class="list-group">
            {{#each burgers}}
              {{#if devoured}}
                <li class = "list-group-item text-center devouredBurg">{{this.id}}. {{this.burger_name}}
                </li>
              {{/if}}
            {{/each}}
          </ul> 
          <button class="btn btn-secondary clear-devoured ">Clear</button>
      </div>
  </div>


  <h3 class = "text-center">Add A Burger!</h3>
  <form class="create-form text-center">
    <label for="burg">Burger Name:</label>
    <input type="text" id = "burg" name = "burgerName">

    <button type="submit" class = "btn btn-secondary submitBtn">Add Burger <img src="/assets/favicon/favicon-32x32.png"></button>
  </form>


